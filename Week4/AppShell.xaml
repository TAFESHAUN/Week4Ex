<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Week4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Week4.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="Aqua"
    >

    <TabBar>
        <Tab Title="1">
            <!--<Shell.TitleView>
                <Grid ColumnDefinitions="20*,20*,20*">
                    <Label Text="Home" BackgroundColor="Red"></Label>
                    <HorizontalStackLayout Grid.Column="2">
                        <Label Text="Icon" BackgroundColor="Red"></Label>
                    </HorizontalStackLayout>
                </Grid>
            </Shell.TitleView>-->
            <Shell.TitleView>
                <StackLayout BackgroundColor="Coral">
                    <Label Text="Home" HorizontalOptions="Center" FontSize="Header"></Label>
                </StackLayout>
            </Shell.TitleView>
            <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        </Tab>
        <Tab Title="2">
            <Shell.TitleView>
                <Label Text="Home" BackgroundColor="Red"></Label>
            </Shell.TitleView>
            <ShellContent
          ContentTemplate="{DataTemplate local:NewPage}"
          Route="NewPage" />
        </Tab>
        <Tab Title="3">
            <Shell.TitleView>
                <Label Text="Home"></Label>
            </Shell.TitleView>
            <ShellContent
          ContentTemplate="{DataTemplate local:OtherPage}"
          Route="OtherPage" />
        </Tab>
        <Tab Title="4">
            <ShellContent 
            ContentTemplate="{DataTemplate local:NewsPage}"
            Route="NewsPage"
            />
        </Tab>
        <Tab Title="5">
            <Shell.TitleView>
                <Label Text="Home"></Label>
            </Shell.TitleView>
            <ShellContent
                ContentTemplate="{DataTemplate local:pages1}"
                Route="pages1"
                />
        </Tab>
    </TabBar>


</Shell>
